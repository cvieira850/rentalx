{
  "compilerOptions": {
    "target": "es2016",                                 
    "experimentalDecorators": true,                  
    "emitDecoratorMetadata": true,                   
    "module": "commonjs",                               
    "baseUrl": "./src",                                 
    "paths": {
      "@modules/*": ["modules/*"],
      "@middlewares/*": ["middlewares/*"],
      "@config/*": ["config/*"],
      "@shared/*": ["shared/*"],
      "@utils/*": ["utils/*"],
      "@errors/*": ["errors/*"]
    },                                     
    "resolveJsonModule": true,                       
    "outDir": "./dist",                                  
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,           
    "skipLibCheck": true                                
  }
}
